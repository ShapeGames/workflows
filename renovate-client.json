{
  "extends": [
    "config:base"
  ],
  "npmrcMerge": true,
  "prCreation": "immediate",
  "prHourlyLimit": 0,
  "ignorePaths": ["packages/**"],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    },
    {
      "packagePatterns": ["typescript"],
      "enabled": false
    }
  ]
}
